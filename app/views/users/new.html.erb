<h1 class='text-center'>Inscription</h1>

<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Nom"%>
      <%= f.text_field :name, class: 'mb-1 form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'mb-1 form-control' %>

      <%= f.label :identifiant, "Identifiant officiel (SIREN, SIRET, RNA)"%>
      <%= f.text_field :identifiant, class: 'mb-1 form-control' %>


      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, class: 'mb-1 form-control' %>

      <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
      <%= f.password_field :password_confirmation, class: 'mb-1 form-control' %>

      <%= f.submit "CrÃ©er mon compte", class: "mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>